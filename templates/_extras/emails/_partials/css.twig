    }
    .Button > tbody > tr > td {
        padding-bottom: 15px;
    }
    .Button table {
        width: auto;
    }
    .Button table td {
        background-color: #ffffff;
        border-radius: 5px;
        text-align: center;
    }
    .Button a {
        background-color: #ffffff;
        border: solid 1px #3498db;
        border-radius: 5px;
        box-sizing: border-box;
        color: #3498db;
        cursor: pointer;
        display: inline-block;
        font-size: 16px;
