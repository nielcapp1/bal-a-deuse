{% extends craft.app.request.isAjax() and not craft.app.request.getIsPreview()
    ? "_layouts/_types/ajax.twig"
    : "_layouts/_types/web.twig"
%}

{% set stylesheet = rev('main.css') %}
{% set scripts = rev('main.js') %}

{% block htmlTag %}
     <html lang="{{ craft.app.language|slice(0,2) }}" prefix="og: http://ogp.me/ns# fb: http://ogp.me/ns/fb#">
{% endblock htmlTag %}

{% block headContent %}

    {% block headMeta %}
    {% endblock headMeta %}

    {% block headLinks %}
    {% endblock headLinks %}

    {% include "_layouts/_types/_partials/_head/js.twig" %}

    {% block headJs %}
    {% endblock headJs %}

    {% if stylesheet %}
        <link rel="stylesheet" href="{{ rev('main.css') }}">
    {% endif %}

    <style>
        {% block headCss %}
        {% endblock headCss %}
    </style>

{% endblock headContent %}

{% block bodyContent %}

    {% block bodyHtml %}
    {% endblock bodyHtml %}

    {% if scripts %}
        <script src="{{ rev('main.js') }}"></script>
    {% endif %}

    {% block bodyJs %}
    {% endblock bodyJs %}

{% endblock bodyContent %}
